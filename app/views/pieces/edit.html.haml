.span6
  -if @piece.sales.empty?
    %ul.nav.nav-pills
      %li= link_to t('.delete'), @piece, confirm: t('.confirm_delete'), :method => :delete, class: 'btn btn-small btn-danger'

  = render 'form'

.span6
  %ul.nav.nav-pills
    %li= link_to t('.new_sale'), new_piece_sale_path(@piece), class: 'btn btn-small'

  - if !@piece.new_record?
    = render 'sales', piece: @piece