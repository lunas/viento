%table#sales-overview
  %tr
    %th Produziert
    %th Verkauft
    %th Bestand
    %th Gesamterl&ouml;s
  %tr
    %td= piece.count_produced
    %td= piece.count_sold
    %td= piece.count_stock
    %td= piece.revenue

- if piece.count_sold > 0
  %p= "#{piece.name} wurde #{times(piece.count_sold)} verkauft an:"

  %table#piece_sales.dataTable
    %thead
      %th Kundin
      %th Ort
      %th Preis
      %th Datum
      %th
    %tbody
      - piece.sales.each do |sale|
        %tr{"data-edit_url" => "#{edit_piece_sale_path(piece, sale)}"}
          %td= link_to sale.client.name, edit_client_path(sale.client)
          %td= sale.client.city
          %td= sale.actual_price
          %td= sale.date
          %td.delete
            = link_to piece_sale_path(piece, sale), :confirm => 'Are you sure?', :method => :delete do
              %i.icon-remove

