
= form_tag clients_path, :method => 'get', id: 'clients_search', :class => 'form-search' do

  %ul.nav.nav-pills
    %li= link_to t('.new_client'), new_client_path, class: 'btn btn-small'
    %li= link_to t('.export'), '/clients/export.xls', class: 'btn btn-small'
    %li
      .input-append
        =text_field_tag :search, params[:search], placeholder: t('.search'), :class => 'search-query'
        %span.add-on
          %a(href="#" data-toggle="tooltip" data-placement="bottom" title="#{t('.search_delete')}") x
    %li.divider-vertical &nbsp;&nbsp;
    %li= status_filter
    %li= role_filter
    %li.divider-vertical &nbsp;&nbsp;
    %li.pull-right
      = per_page_filter


  #clients
    = render :partial => 'clients'
