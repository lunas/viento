%p= count_pieces_phrase(client.sales_count, client.sales_total)

- if client.sales.size > 0

  %table#client_sales.tablesorter
    %thead
      %th Teil
      %th Kollektion
      %th Material
      %th Farbe
      %th Groesse
      %th Preis
      %th Datum
    %tbody
      - client.sales.each do |sale|
        %tr
          %td= link_to sale.piece.name, edit_piece_path(sale.piece)
          %td= sale.piece.collection
          %td= sale.piece.fabric
          %td= sale.piece.color
          %td= sale.piece.size
          %td= sale.actual_price
          %td= sale.date
  - if client.sales.size > 10
    .tablesorter-pager
      %form>
      =image_tag "icons/first.png", class: 'first'
      =image_tag "icons/prev.png",  class: 'prev'
      %span.pagedisplay
      =image_tag "icons/next.png",  class: 'next'
      =image_tag "icons/last.png",  class: 'last'
      %select.pagesize
        %option{selected:"selected",value:"10"} 10
        %option{value:"20"} 20
        %option{value:"40"} 40
        %option{value:"60"} 60
        %option{value:"9000"} All
