#revenue_totals

  %table#revenue_table.table
    %thead
      %th= t('collection')
      %th= t('.produced_count')
      %th= t('.sales_count')
      %th= t('.percent_sold')
      %th.revenue= t('.revenue')
    %tbody
      - @collections.each do |collection|
        %tr{"data-collection" => "#{collection.collection}"}
          %td= collection.collection
          %td= collection.total_produced.to_i
          %td= collection.total_sold.to_i
          %td= collection.percent_sold.to_i
          %td.revenue= collection.total_revenue.to_i

#start_image
  = image_tag 'sophie-seite.jpg'
  %span
