= simple_form_for @sale, html: {class: 'form-horizontal sale_form'} do |f|
  = f.error_notification
  .row
    .span6
      = f.input :client_id, label: "Kundin"
      = f.input :piece_id,  label: "Teil"
      = f.input :date, as: :datepicker
      = f.input :actual_price, label: "Preis"

  .form-actions
    = f.button :submit
